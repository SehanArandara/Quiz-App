<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ViewAllQuizes">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="472dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="392dp"
        android:layout_height="422dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/button10"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/button10"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:background="@drawable/all_rounded_corner"
            android:orientation="vertical"
            android:paddingBottom="10sp">

            <LinearLayout
                android:layout_width="405dp"
                android:layout_height="132dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Quiz01"
                    android:layout_width="262dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="5sp"
                    android:text="@string/garde_7_maths"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/Quiz01_img"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Quiz2T"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="@string/_10_questions"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80sp"
                    android:background="@drawable/register_button"
                    android:padding="16dp"
                    android:text="@string/show"
                    android:textAlignment="center"
                    android:textColor="#FEFEFE"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/all_rounded_corner"
            android:orientation="vertical"
            android:paddingBottom="10sp">

            <LinearLayout
                android:layout_width="405dp"
                android:layout_height="132dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Book1"
                    android:layout_width="262dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="5sp"
                    android:text="@string/grade_11_maths"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/book1_img"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/book2T"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="@string/_15_questions"
                    android:textColor="@color/black"
                    android:textSize="20sp"

                    />

                <TextView
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80sp"
                    android:background="@drawable/register_button"
                    android:padding="16dp"
                    android:text="@string/show"
                    android:textAlignment="center"
                    android:textColor="#FEFEFE"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/CoursesH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/oswald"
        android:text="@string/quizes1"
        android:textColor="@color/fontBlue1"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/searchView"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/searchView"
        app:layout_constraintTop_toTopOf="parent" />


    <SearchView
        android:id="@+id/searchView"
        android:layout_width="301dp"
        android:layout_height="46dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/all_rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CoursesH1" />

    <Button
        android:id="@+id/button10"
        android:layout_width="161dp"
        android:layout_height="55dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/register_button"
        android:text="@string/add_quizes"

        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.857"
        android:textColor="#FEFEFE"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners"
        app:itemIconTint="#ffff"
        app:itemTextColor="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />


</androidx.constraintlayout.widget.ConstraintLayout>